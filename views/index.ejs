<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8" />
    <title>Video Chat Home</title>
    <style media="screen">
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .button-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .button {
            padding: 10px 20px;
            font-size: 18px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Welcome to Video Chat</h1>
        <div class="button-container">
            <button id="create-room">Create New Call Room</button>
            <button id="join-room">Join an Existing Room</button>
        </div>
    </div>

    <script type="text/javascript">
        document.getElementById('create-room').addEventListener('click', () => {
            // Redirect to the room creation page
            window.location.href = '/create-room';
        });

        document.getElementById('join-room').addEventListener('click', () => {
            // Prompt the user for a room code and redirect to the room
            const roomCode = prompt('Enter the room code:(type:"create-room")');
            if (roomCode) {
                window.location.href = `/${roomCode}`;
            }
        });
    </script>
</body>

</html>